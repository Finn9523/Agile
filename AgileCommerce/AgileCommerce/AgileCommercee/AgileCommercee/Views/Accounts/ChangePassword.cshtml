@model AgileCommercee.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<form asp-action="ChangePassword">
    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <div class="input-group">
            <input asp-for="OldPassword" class="form-control" type="password" id="passwordField" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary" id="togglePasswordBtn">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
        </div>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <div class="input-group">
            <input asp-for="NewPassword" class="form-control" type="password" id="passwordField" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary" id="togglePasswordBtn">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
        </div>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <div class="input-group">
            <input asp-for="ConfirmPassword" class="form-control" type="password" id="passwordField" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-secondary" id="togglePasswordBtn">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>
</form>
<script src="~/MiniStore-1.0.0/js/jquery-1.11.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script type="text/javascript" src="~/MiniStore-1.0.0/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="~/MiniStore-1.0.0/js/plugins.js"></script>
<script type="text/javascript" src="~/MiniStore-1.0.0/js/script.js"></script>
<script>
    $(document).ready(function () {
        $('#togglePasswordBtn').on('mousedown', function () {
            $('#passwordField').attr('type', 'text');
        });

        $('#togglePasswordBtn').on('mouseup mouseleave', function () {
            $('#passwordField').attr('type', 'password');
        });
    });
</script>