                </div>
            </div>
        </div>
    </div>
    <script src="~/MiniStore-1.0.0/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/MiniStore-1.0.0/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/MiniStore-1.0.0/js/plugins.js"></script>
    <script type="text/javascript" src="~/MiniStore-1.0.0/js/script.js"></script>
    </br>
</body>
<script>
    $(document).ready(function () {
        $('#togglePasswordBtn').on('mousedown', function () {
            $('#passwordField').attr('type', 'text');
        });

        $('#togglePasswordBtn').on('mouseup mouseleave', function () {
            $('#passwordField').attr('type', 'password');
        });
    });
</script>
