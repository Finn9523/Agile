@model AgileCommercee.Data.HangHoa

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>BaboonStore - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="stylesheet" type="text/css" href="~/MiniStore-1.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/MiniStore-1.0.0/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <h1 align="center">EDITING THE PRODUCT</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaHh" />
                <div class="form-group">
                    <label asp-for="TenHh" class="control-label"></label>
                    <input asp-for="TenHh" class="form-control" />
                    <span asp-validation-for="TenHh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaLoai" class="control-label"></label>
                    <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.Loais"></select>
                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hinh" class="control-label"></label>
                    <input type="hidden" name="Hinh" value="@Model.Hinh" />
                    <img width="200px" height="200px" src="~/images/HangHoas/@Model.Hinh" alt="@Model.TenHh" />
                    <input type="file" name="Hinh" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="NgaySx" class="control-label"></label>
                    <input asp-for="NgaySx" class="form-control" />
                    <span asp-validation-for="NgaySx" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiamGia" class="control-label"></label>
                    <input asp-for="GiamGia" class="form-control" />
                    <span asp-validation-for="GiamGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLanXem" class="control-label"></label>
                    <input asp-for="SoLanXem" class="form-control" />
                    <span asp-validation-for="SoLanXem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label"></label>
                    <input asp-for="MoTa" class="form-control" />
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaNcc" class="control-label"></label>
                    <select asp-for="MaNcc" class="form-control" asp-items="ViewBag.NhaCungCaps"></select>
                    <span asp-validation-for="MaNcc" class="text-danger"></span>
                </div>

                <br />
                <hr />

                <div class="form-group d-flex justify-content-between">
                    <a class="btn btn-secondary" asp-action="Index">Back to Product List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />

