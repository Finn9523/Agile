@model List<AgileCommercee.Models.CategoryStatistic>
@{
    ViewData["Title"] = "StatisticByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align="center">Product statistic by Category</h1>

<table class="table table-hover table-bordered justify-content-center">
    <thead align="center">
        <tr>
            <th>Category</th>
            <th>Number of Products</th>
        </tr>
    </thead>
    <tbody align="center">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaLoaiNavigation</td>
                <td>@item.NumOfProduct</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a button type="submit" class="btn btn-primary" asp-action="Index">Back to List</a>
</div>